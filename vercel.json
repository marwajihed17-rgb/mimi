{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "VITE_INVOICE_WEBHOOK_URL": "@vite_invoice_webhook_url",
    "VITE_KDR_WEBHOOK_URL": "@vite_kdr_webhook_url",
    "VITE_GA_WEBHOOK_URL": "@vite_ga_webhook_url",
    "VITE_KDRI_WEBHOOK_URL": "@vite_kdri_webhook_url",
    "VITE_GOOGLE_SHEET_URL": "@vite_google_sheet_url"
  }
}
